page{
  width: 100%;
  height: 100%;
}
.box{
  width: 100%;
  height: 100%;
}
.active{
  color: #333333;
}
.selected{
  border-color: #1B1B1B !important;
}
.list-menu{
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  border-bottom: 1rpx solid #EEEEEE;
  border-top: 1rpx solid #DDDDDD;
  font-size: 14px;
  background: #FFFFFF;
  z-index: 3;
  font-family:'PingFang-SC-Regular';
  color: #999999;
  position: fixed;
  top: 0px;
}
.list-menu view{
  width: 25%;
  float: left;
  text-align: center;
}
.screen{
  width: 25%;
  float: left;
  text-align: center;
  background: url(https://static.pecoo.com/images/common/screen.png) no-repeat 132rpx center;
  background-size: 22rpx;
}
.content{
  width: 100%;
  height: auto;
  position: relative;
  left:0;
  top: 76rpx;
  font-family:'PingFang-SC-Regular';
  overflow: hidden;
}
/* list */
.list-item{
  width: 50%;
  float: left;
  margin-bottom: 20rpx;
  font-family: 'PingFang-SC-Regular';
}
.pic-box{
  max-width: 335rpx;
  max-height: 334rpx;
  margin: 30rpx auto 0;
}
.item-image{
  max-width: 335rpx;
  max-height: 334rpx;
}
.item-goods-name{
  padding: 10rpx 20rpx 0;
  font-size: 14px;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-goods-brand{
  font-size: 13px;
  padding: 10rpx 20rpx 0;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-time{
  padding: 6rpx 20rpx 0;
  font-size: 12px;
  color: #666666;
}
.item-price{
  padding: 10rpx 20rpx 0;
  font-size: 18px;
  color: #333333;
  display: flex;
  align-items: center;
}
/* 底部分页器 */
.pagination{
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
}
.number-display{
  background: url(https://static.pecoo.com/images/list/round.png) no-repeat center center;
  background-size: 74rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFang-SC-Medium';
  color: #333333;
  border-radius: 50%;
}
.cur-num,.total-num{
  font-size: 12px;
}
.solid{
  width: 50rpx;
  border-top: 1rpx solid #DDDDDD;
}
.back-top{
  width: 90rpx;
  height: 90rpx;
  background: url(https://static.pecoo.com/images/list/go_back.png) no-repeat;
  background-size: 90rpx;
}
.discount{
  display: inline-block;
  width: 70rpx;
  margin-right: 16rpx;
  text-align: center;
  background: #E83E3E;
  color: #FFFFFF;
  font-size: 10px;
}
