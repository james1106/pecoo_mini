page{
  background: #F3F3F3;
  font-family: 'PingFangSC-Regular'
}
.apply-content{
  margin-top: 20rpx;
  background: #FFFFFF;
  padding-bottom: 40rpx;
}
.apply-title{
  font-size: 13px;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 105rpx;
  border-bottom: 1rpx solid #E2E2E2;
}
.desc-title{
  font-size: 13px;
  margin: 0 30rpx;
  height: 94rpx;
  line-height: 94rpx;
}
.upload-title{
  font-size: 13px;
  margin: 40rpx 30rpx 23rpx;
}
.upload-info{
  border: 1px dashed #E2E2E2;
  padding: 30rpx 0 30rpx 10rpx;
  margin: 0 30rpx;
  font-size: 13px;
  color: #999999;
}
.look{
  color: #333333;
  text-decoration: underline;
  padding-left: 10rpx;
}
.detail-info{
  margin: 0 30rpx;
  position: relative;
}
.detail-info textarea{
  padding: 20rpx 10rpx;
  height: 240rpx;
  background:rgba(243,243,243,1);
  border-radius:8px;
  font-size: 14px;
}
.cur-num{
  position: absolute;
  right: 80rpx;
  bottom: 18rpx;
  font-size: 12px;
  color: #999999;
}
.total-num{
  position: absolute;
  right: 30rpx;
  bottom: 18rpx;
  font-size: 12px;
  color: #999999;
}
.upload-file{
  margin: 28rpx 30rpx 0;
  height: 164rpx;
  background: #F3F3F3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.add-pic{
  width: 68rpx;
  height: 68rpx;
}
.add-file{
  color: #999999;
  font-size: 12px;
}
.submit{
  margin: 40rpx 30rpx 0;
  background: #1B1B1B;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  text-align:center;
  font-size: 15px;
}
.picture{
  width: 100%;
  height: 164rpx;
  white-space: nowrap;
  margin-top: 28rpx;
}
.item-picture-box{
  margin-left: 30rpx;
  display: inline-block;
  width: 164rpx;
  height: 164rpx;
  position: relative;
}
.default-box{
  text-align: center;
  background: #F3F3F3;
  color: #E2E2E2;
}
.item-pics{
  max-width: 100%;
  max-height: 100%;
  margin: 0 auto;
}
.delete{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 10rpx;
  top: 0rpx;
}
/* 弹框 */
.apply-type{
  position: fixed;
  bottom: 0;
  left: 0;
  background: #FFFFFF;
  height: 475rpx;
  width: 100%;
  z-index: 1001;
}
.title{
  width: 100%;
  text-align: center;
  color: #333333;
  font-size: 16px;
  height: 99rpx;
  line-height: 99rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.cur-type{
  height: 128rpx;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cur-type>view{
  display: flex;
  align-items: center;
}
.type-icon{
  width: 52rpx;
  height: 52rpx;
  border: 1px solid #333333;
  border-radius: 50%;
  text-align: center;
  line-height: 52rpx;
  font-size: 15px;
}
.type-content{
  margin-left: 14rpx;
  font-family: PingFangSC-Medium;
}
.fail-goods{
  font-size: 13px;
  color: #333333;
}
.fail-detail{
  color: #999999;
  font-size: 10px;
}
.close{
  margin: 0 40rpx;
  background: #1B1B1B;
  color: white;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15px;
  font-family: PingFangSC-Medium;
}